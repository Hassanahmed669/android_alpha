<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btnEspresso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Espresso1"
        app:layout_constraintBottom_toTopOf="@+id/btnEspresso2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="66dp" />

    <Button
        android:id="@+id/btnEspresso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="espresso2"
        app:layout_constraintBottom_toTopOf="@+id/btnEspresso3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEspresso1"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="161dp" />

    <Button
        android:id="@+id/btnEspresso3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="espresso3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEspresso2"
        app:layout_constraintBottom_toTopOf="@+id/btnIdlingResource" />

    <Button
        android:id="@+id/btnIdlingResource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="espresso4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEspresso3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
